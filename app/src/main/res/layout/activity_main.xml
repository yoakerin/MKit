<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp20"
        android:paddingBottom="@dimen/dp20"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/custom_divider"
            android:showDividers="middle|beginning|end">

            <com.yoake.widgets.progress.R2CountDownProgressView
                android:id="@+id/testCountTimeProgressView"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:r2cd_backgroundColorCenter="@color/back"
                app:r2cd_borderBottomColor="@color/back"
                app:r2cd_countTime="5000"
                app:r2cd_titleCenterSize="@dimen/dp20"
                app:r2cd_titleCenterText="跳过" />

            <com.yoake.widgets.image.R2RoundImageView
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:scaleType="centerCrop"
                android:src="@drawable/tools_preview_logo"
                app:r2round_corner="@dimen/dp10"
                app:r2round_stroke_color="@color/green"
                app:r2round_stroke_width="@dimen/dp1" />

            <com.yoake.widgets.image.R2RoundImageView
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:scaleType="centerCrop"
                android:src="@drawable/tools_preview_logo"
                app:r2round_as_circle="true"
                app:r2round_stroke_color="@color/green"
                app:r2round_stroke_width="@dimen/dp1" />

            <com.yoake.widgets.layout.R2RoundRelativeLayout
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"

                app:r2round_corner_bottom_right="@dimen/dp30"
                app:r2round_corner_top_left="@dimen/dp20"
                app:r2round_corner_top_right="@dimen/dp20"
                app:r2round_stroke_color="@color/red"
                app:r2round_stroke_width="@dimen/dp2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tools_preview_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#A0000000"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="犬夜叉"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp16" />
            </com.yoake.widgets.layout.R2RoundRelativeLayout>


            <com.yoake.widgets.layout.R2RoundConstraintLayout
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"

                app:r2round_corner_bottom_left="@dimen/dp30"
                app:r2round_corner_top_left="@dimen/dp20"
                app:r2round_corner_top_right="@dimen/dp20"
                app:r2round_stroke_color="@color/red"
                app:r2round_stroke_width="@dimen/dp2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tools_preview_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#A0000000"
                    android:gravity="center"
                    android:padding="@dimen/dp4"
                    android:text="犬夜叉"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.yoake.widgets.layout.R2RoundConstraintLayout>


        </LinearLayout>


    </HorizontalScrollView>

    <com.yoake.widgets.readmore.R2ReadMoreTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:text="@string/tools_preview_text"
        app:r2readLessText="收起"
        app:r2readLessTextColor="@color/orange"
        app:r2readMoreMaxLines="2"
        app:r2readMoreText="展开"
        app:r2readMoreTextColor="@color/red" />

    <TextView
        android:id="@+id/infoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@color/back"
        android:padding="@dimen/dp10"
        android:text="info"
        android:textColor="@color/white" />

    <GridLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:padding="@dimen/dp10"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="仿IOS对话框" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="友盟分享" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="三方登录" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="定位和权限" />
    </GridLayout>


</LinearLayout>