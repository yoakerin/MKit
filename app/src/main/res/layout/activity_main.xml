<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/custom_divider"
                android:gravity="center_vertical"
                android:showDividers="middle|beginning|end">

                <ImageView
                    android:layout_width="@dimen/dp160"
                    android:layout_height="@dimen/dp90"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tools_preview_logo" />

                <com.yoake.widgets.image.R2ImageView
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tools_preview_logo"
                    app:r2_border_color="@color/deep_sky_blue"
                    app:r2_border_width="@dimen/dp2"
                    app:r2_is_circle="true" />

                <com.yoake.widgets.progress.R2CountDownProgressView
                    android:id="@+id/testCountTimeProgressView"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:r2cd_backgroundColorCenter="@color/back"
                    app:r2cd_borderBottomColor="@color/back"
                    app:r2cd_borderDrawColor="@color/orange"
                    app:r2cd_borderWidth="@dimen/dp3"
                    app:r2cd_countTime="15000"
                    app:r2cd_markBallColor="@color/orange"
                    app:r2cd_markBallWidth="@dimen/dp3"
                    app:r2cd_textStyle="second"
                    app:r2cd_titleCenterSize="@dimen/dp18"
                    app:r2cd_titleCenterText="跳过" />


                <com.yoake.widgets.image.R2ImageView2
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tools_preview_logo"
                    app:r2_border_color="@color/red"
                    app:r2_border_width="@dimen/dp1"
                    app:r2_corner_radius="@dimen/dp10" />

                <com.yoake.widgets.image.R2ImageView2
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:layout_margin="@dimen/dp8"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tools_preview_logo"
                    app:r2_corner_radius="@dimen/dp10"
                    app:r2_shadowAlpha="1.0"
                    app:r2_shadowElevation="@dimen/dp8" />

                <com.yoake.widgets.layout.R2RelativeLayout
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    app:r2_borderColor="@color/yellow"
                    app:r2_borderWidth="@dimen/dp2"

                    app:r2_radius="@dimen/dp10">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tools_preview_logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#A0000000"
                        android:gravity="center"
                        android:padding="@dimen/dp4"
                        android:text="犬夜叉"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp16" />
                </com.yoake.widgets.layout.R2RelativeLayout>


                <com.yoake.widgets.layout.R2ConstraintLayout
                    android:layout_width="@dimen/dp160"
                    android:layout_height="@dimen/dp90"
                    android:layout_margin="@dimen/dp8"
                    android:background="@color/white"
                    app:r2_radius="@dimen/dp6"
                    app:r2_shadowAlpha="1.0"
                    app:r2_shadowElevation="@dimen/dp8">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tools_preview_logo" />


                </com.yoake.widgets.layout.R2ConstraintLayout>

                <com.yoake.widgets.button.R2Button
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp40"
                    android:background="@color/back"
                    android:text="按钮"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/dp16"
                    app:r2_borderColor="@color/yellow"
                    app:r2_borderWidth="@dimen/dp1"
                    app:r2_radius="@dimen/dp20" />
            </LinearLayout>


        </HorizontalScrollView>

        <com.yoake.widgets.text.R2ReadMoreTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:text="@string/tools_preview_text"
            app:r2readLessText="收起"
            app:r2readLessTextColor="@color/orange"
            app:r2readMoreMaxLines="2"
            app:r2readMoreText="展开"
            app:r2readMoreTextColor="@color/red" />


        <TextView
            android:id="@+id/infoTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@color/back"
            android:padding="@dimen/dp10"
            android:text="info"
            android:textColor="@color/white" />

        <GridLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:padding="@dimen/dp10"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="仿IOS对话框" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="友盟分享" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:text="三方登录" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="定位和权限" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="保存网络图片" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="Loading" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:text="Popup" />
        </GridLayout>


    </LinearLayout>
</ScrollView>