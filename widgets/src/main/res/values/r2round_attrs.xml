<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- *R2Round公共属性* -->
    <!--圆形-->
    <attr name="r2round_as_circle" format="boolean" />
    <!--全部圆角半径-->
    <attr name="r2round_corner" format="integer|dimension" />
    <!--针对各个角的半径-->
    <attr name="r2round_corner_top_left" format="integer|dimension" />
    <attr name="r2round_corner_top_right" format="integer|dimension" />
    <attr name="r2round_corner_bottom_left" format="integer|dimension" />
    <attr name="r2round_corner_bottom_right" format="integer|dimension" />

    <!--描边颜色／半径-->
    <attr name="r2round_stroke_color" format="color|reference" />
    <attr name="r2round_stroke_width" format="integer|dimension" />

    <!-- 是否剪裁 RCLayout 的背景 -->
    <attr name="r2round_clip_background" format="boolean" />

    <!--真正用于解析的属性-->
    <declare-styleable name="RCAttrs">
        <attr name="r2round_as_circle" />
        <attr name="r2round_corner" />
        <attr name="r2round_corner_top_left" />
        <attr name="r2round_corner_top_right" />
        <attr name="r2round_corner_bottom_left" />
        <attr name="r2round_corner_bottom_right" />
        <attr name="r2round_stroke_color" />
        <attr name="r2round_stroke_width" />
        <attr name="r2round_clip_background" />
    </declare-styleable>


    <!--假体：用于提示-->
    <declare-styleable name="R2RoundRelativeLayout">
        <attr name="r2round_as_circle" />
        <attr name="r2round_corner" />
