<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="R2CountDownProgressView">

        <attr name="backgroundColorCenter" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderDrawColor" format="color" />
        <attr name="borderBottomColor" format="color" />

        <attr name="markBallWidth" format="dimension" />
        <attr name="markBallColor" format="color" />
        <attr name="markBallFlag" format="boolean" />

        <attr name="startAngle" format="float" />
        <attr name="clockwise" format="boolean" />

        <attr name="countTime" format="integer"/>

        <attr name="textStyle" format="enum">
            <enum name="jump" value="0" />
            <enum name="second" value="1" />
            <enum name="clock" value="2" />
            <enum name="none" value="3" />
        </attr>

        <attr name="titleCenterText" format="string"/>
        <attr name="titleCenterColor" format="color"/>
        <attr name="titleCenterSize" format="dimension" />

    </declare-styleable>

    <declare-styleable name="ReadMoreTextView">
        <attr name="readMoreMaxLines" format="integer" />
        <attr name="readMoreOverflow">
            <flag name="clip" value="1" />
            <flag name="ellipsis" value="2" />
        </attr>
        <attr name="readMoreText" format="string" />
        <attr name="readMoreTextSize" format="dimension" />
        <attr name="readMoreTextColor" format="reference|color" />
        <attr name="readMoreTextUnderline" format="boolean" />
        <attr name="readMoreTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="readMoreFontFamily" format="string" />
        <attr name="readMoreTypeface" format="integer">
            <enum name="normal" value="0" />
            <enum name="sans" value="1" />
            <enum name="serif" value="2" />
            <enum name="monospace" value="3" />
            <enum name="sans_serif_medium" value="4" />
        </attr>
        <attr name="readMoreTextAppearance" format="reference" />
        <attr name="readMoreToggleArea">
            <flag name="none" value="1" />
            <flag name="all" value="2" />
            <flag name="more" value="3" />
        </attr>

        <attr name="readLessText" format="string" />
        <attr name="readLessTextSize" format="dimension" />
        <attr name="readLessTextColor" format="reference|color" />
        <attr name="readLessTextUnderline" format="boolean" />
        <attr name="readLessTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="readLessFontFamily" format="string" />
        <attr name="readLessTypeface" format="integer">
            <enum name="normal" value="0" />
            <enum name="sans" value="1" />
            <enum name="serif" value="2" />
            <enum name="monospace" value="3" />
            <enum name="sans_serif_medium" value="4" />
        </attr>
        <attr name="readLessTextAppearance" format="reference" />
    </declare-styleable>

    <attr name="readMoreTextViewStyle" format="reference" />
    <attr name="readLessTextViewStyle" format="reference" />

    //==
    <declare-styleable name="R2RoundImageView">
        <!--边框宽度，默认：0-->
        <attr name="r2iv_border_width" format="dimension" />
        <!--边框的颜色，默认：Color.GRAY-->
        <attr name="r2iv_border_color" format="color" />
        <!--选中时，覆盖在图片上的图层颜色，默认：Color.TRANSPARENT-->
        <attr name="r2iv_selected_mask_color" format="color" />
        <!--边框选中时的颜色，默认：Color.GRAY-->
        <attr name="r2iv_selected_border_color" format="color" />
        <!--边框选中时的宽度，默认：0-->
        <attr name="r2iv_selected_border_width" format="dimension" />
        <!--圆角的大小，默认0-->
        <attr name="r2iv_corner_radius" format="dimension" />
        <!--是否是椭圆形，默认：false-->
        <attr name="r2iv_is_oval" format="boolean" />
        <!--图片是否是圆形的，默认：false-->
        <attr name="r2iv_is_circle" format="boolean" />
        <!--图片是否可触摸选中，默认：true-->
        <attr name="r2iv_is_touch_select_mode_enabled" format="boolean" />
    </declare-styleable>



</resources>