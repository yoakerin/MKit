<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/complete_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    tools:viewBindingIgnore="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stop_fullscreen"
        android:layout_width="@dimen/v_player_controller_height"
        android:layout_height="@dimen/v_player_controller_height"
        android:padding="@dimen/v_player_controller_icon_padding"
        android:src="@drawable/v_player_ic_action_arrow_back"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_replay"
            android:layout_width="@dimen/v_player_play_btn_size"
            android:layout_height="@dimen/v_player_play_btn_size"
            android:layout_gravity="center"
            android:background="@drawable/v_player_shape_play_bg"
            android:padding="@dimen/dp12"
            android:src="@drawable/v_player_ic_action_replay" />

    </LinearLayout>
</FrameLayout>