<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/title_image_view"
        android:layout_width="@dimen/share_panel_item_icon_size"
        android:layout_height="@dimen/share_panel_item_icon_size"
        android:src="@drawable/icon_share_wechat" />

    <TextView
        android:id="@+id/title_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:textColor="@color/share_panel_item_text_color"
        android:textSize="@dimen/share_panel_item_text_size"
        tools:text="微信" />
</LinearLayout>